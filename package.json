{
	"name": "vscode-pets",
	"displayName": "vscode-pets",
	"description": "Pets for your VS Code",
	"version": "1.0.0",
	"engines": {
		"vscode": "^1.53.0"
	},
	"repository": {
		"type": "github",
		"url": "https://github.com/tonybaloney/vscode-pets"
	},
	"publisher": "tonybaloney",
	"categories": [
		"Other"
	],
	"keywords": [
		"pet",
		"cat",
		"pets",
		"clippy",
		"rubber duck"
	],
	"license": "MIT",
	"icon": "icon.png",
	"activationEvents": [
		"*",
		"onView:vscode-pets.petsView"
	],
	"main": "./out/extension/extension.js",
	"contributes": {
		"views": {
			"explorer": [
				{
					"type": "webview",
					"id": "vscode-pets.petsView",
					"name": "VSCode pets Pets View",
					"when": "vscode-pets.position == 'explorer'"
				}
			]
		},
		"commands": [
			{
				"command": "vscode-pets.start",
				"title": "Start pet coding session",
				"category": "Pet Coding"
			},
			{
				"command": "vscode-pets.throw-ball",
				"title": "Throw ball",
				"category": "Pet Coding"
			},
			{
				"command": "vscode-pets.spawn-pet",
				"title": "Spawn additional pet",
				"category": "Pet Coding"
			},
			{
				"command": "vscode-pets.delete-pets",
				"title": "Delete additional pets",
				"category": "Pet Coding"
			}
		],
		"configuration": [
			{
				"properties": {
					"vscode-pets.petColor": {
						"type": "string",
						"enum": [
							"black",
							"brown",
							"green"
						],
						"default": "brown",
						"description": "Pet color",
						"scope": "window"
					},
					"vscode-pets.petType": {
						"type": "string",
						"enum": [
							"cat",
							"dog",
							"snake",
							"clippy",
							"rubber duck"
						],
						"default": "cat",
						"description": "Pet type",
						"scope": "window"
					},
					"vscode-pets.petSize": {
						"type": "string",
						"enum": [
							"nano",
							"medium",
							"large"
						],
						"default": "nano",
						"description": "Pet size"
					},
					"vscode-pets.position": {
						"type": "string",
						"enum": [
							"panel",
							"explorer"
						],
						"default": "panel",
						"description": "VSCode pets webview position"
					}
				}
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile:panel": "webpack",
		"compile:extension": "tsc -p ./tsconfig.extension.json",
		"compile": "npm run compile:panel && npm run compile:extension",
		"watch": "tsc -watch -p ./tsconfig.extension.json",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/extension/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.0",
		"@types/node": "^12.11.7",
		"@types/vscode": "^1.53.0",
		"@typescript-eslint/eslint-plugin": "^4.1.1",
		"@typescript-eslint/parser": "^4.1.1",
		"eslint": "^7.9.0",
		"glob": "^7.1.6",
		"mocha": "^8.1.3",
		"ts-loader": "^8.0.18",
		"typescript": "^4.0.2",
		"vscode-test": "^1.4.0",
		"webpack": "^5.26.0",
		"webpack-cli": "^4.5.0"
	}
}
